<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.user.vetguide.RegistroServiciosActivity"
    android:orientation="vertical"
    android:background="#FFF6E6">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Seleccione la lista de servicios que ofrece. A los clientes les interesa saber lo que puedes ofrecerles"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Baños"
        android:id="@+id/cbBanios"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Corte de Pelo"
        android:id="@+id/cbCorte"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Odontologia"
        android:id="@+id/cbOdontologia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Maternidad"
        android:id="@+id/cbMaternidad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cirugía"
        android:id="@+id/cbCirugia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Medicina General"
        android:id="@+id/cbMedicina"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Rayos X"
        android:id="@+id/cbRayos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Vacunaciones"
        android:id="@+id/cbVacunaciones"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Endoscopia"
        android:id="@+id/cbEndoscopia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/mybutton"
            android:id="@+id/buttonCancelar5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:id="@+id/buttonSiguiente5"
            android:background="@drawable/mybutton"
            android:layout_marginLeft="50dp"/>


    </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
